<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- sublist안의 recyclerview -->
    <data>

        <variable
            name="subStudyList"
            type="com.aio.kotlin.models.StudyList" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_sublist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/basicSubListColor"
        app:cardCornerRadius="8dp"
        app:strokeColor="@color/basicSubListBorderColor"
        app:strokeWidth="1dp">

        <TextView
            android:id="@+id/tv_sublist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="@{subStudyList.title}"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </com.google.android.material.card.MaterialCardView>
</layout>
